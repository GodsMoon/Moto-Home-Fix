<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.nightshadelabs.motoblurhome"
      android:versionCode="4" android:versionName="1.3">
    <application android:icon="@drawable/blur_home_icon" android:label="@string/app_name">
    
        <activity android:icon="@drawable/blur_home_icon" 
            android:label="Default Home" android:launchMode="singleInstance" android:clearTaskOnLaunch="true"
            android:theme="@android:style/Theme.NoDisplay"
            android:excludeFromRecents="true"
            android:name="BlurHome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.HOME"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        
    </application>
    
    <uses-sdk android:minSdkVersion="8" />

</manifest> 